<UserControl x:Class="ControllerEmulatorAPI.UserInterface.UserControls.SettingsCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControllerEmulatorAPI.UserInterface.UserControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label x:Name="NameLabel" Background="{DynamicResource BackgroundLabel}" Foreground="{DynamicResource ForegroundLabel}" />
        <ToggleButton Grid.Column="1" Content="Show/Hide" Unchecked="ToggleButton_Unchecked" Checked="ToggleButton_Checked" Foreground="{DynamicResource ForegroundButton}" Background="{DynamicResource BackgroundButton}" BorderBrush="{DynamicResource BorderButton}" />
        <StackPanel x:Name="SettingsGrid" Grid.Row="1" Grid.ColumnSpan="2" Margin="5,5,5,5" />
    </Grid>
</UserControl>