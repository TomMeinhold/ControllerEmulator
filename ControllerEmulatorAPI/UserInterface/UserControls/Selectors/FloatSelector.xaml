<UserControl x:Class="ControllerEmulatorAPI.UserInterface.UserControls.Selectors.FloatSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControllerEmulatorAPI.UserInterface.UserControls.Selectors"
             mc:Ignorable="d">
    <local:BaseSelector x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label x:Name="LabelName" Foreground="{DynamicResource ForegroundLabel}" Margin="0,0,0,0" />
        <TextBox x:Name="TextBox" HorizontalAlignment="Stretch" Text="" TextWrapping="Wrap" VerticalAlignment="Stretch" TextChanged="TextBox_TextChanged" Grid.Column="1" MinWidth="80" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" />
    </local:BaseSelector>
</UserControl>