<UserControl x:Class="ControllerEmulatorAPI.UserInterface.UserControls.Selectors.StringSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControllerEmulatorAPI.UserInterface.UserControls.Selectors"
             mc:Ignorable="d">
    <local:BaseSelector x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label x:Name="NameLabel" Margin="10,0,10,0" Foreground="{DynamicResource ForegroundLabel}" />
        <TextBox x:Name="TextBox" TextWrapping="Wrap" Grid.Column="1" MinWidth="60" TextChanged="TextBox_TextChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MaxLines="1" />
    </local:BaseSelector>
</UserControl>