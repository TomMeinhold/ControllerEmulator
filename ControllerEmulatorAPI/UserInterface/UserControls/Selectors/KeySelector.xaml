<UserControl x:Class="ControllerEmulatorAPI.UserInterface.UserControls.Selectors.KeySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControllerEmulatorAPI.UserInterface.UserControls.Selectors"
             mc:Ignorable="d">
    <local:BaseSelector x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label x:Name="KeyName" Margin="0,0,0,0" Foreground="{DynamicResource ForegroundLabel}" />
        <ComboBox x:Name="KeyBox" HorizontalAlignment="Stretch" Text="" VerticalAlignment="Stretch" MinWidth="60" SelectionChanged="KeyBox_SelectionChanged" Grid.Column="1" />
    </local:BaseSelector>
</UserControl>