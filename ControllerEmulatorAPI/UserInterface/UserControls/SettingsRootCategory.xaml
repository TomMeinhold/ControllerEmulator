<UserControl x:Class="ControllerEmulatorAPI.UserInterface.UserControls.SettingsRootCategory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ControllerEmulatorAPI.UserInterface.UserControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label x:Name="NameLabel" Background="{DynamicResource BackgroundLabel}" Foreground="{DynamicResource ForegroundLabel}" />
        <StackPanel x:Name="CategoryGrid" Grid.Row="1" Margin="5,5,5,5" />
    </Grid>
</UserControl>